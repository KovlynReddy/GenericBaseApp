@model GenericAppDLL.Models.ViewModels.VendorViewModel


<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="~/Images/DefaultProfile.jpg" alt="Card image cap">
    <div class="card-body">
        <h3 class="card-title">@Model.VendorName</h3>
        <h5 class="card-title">@Model.VendorEmail </h5>
        <h6 class="card-title">@Model.AverageRating</h6>
        <h6 class="card-title">@Model.Status</h6>
        <p class="card-text">@Model.ModelGUID</p>
        <a href="#" class="btn btn-primary">Book</a>
        @if (Model.IsMod == 1)
        {
        <a asp-controller="Vendor" asp-action="Delete" class="btn btn-primary">Delete</a>
        <a asp-controller="Menu" asp-action="ManageVendorMenu" asp-route-id="@Model.ModelGUID" class="btn btn-primary">Manage Menu</a>
            
        }
    </div>
</div>