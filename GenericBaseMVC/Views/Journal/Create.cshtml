@model GenericAppDLL.Models.ViewModels.CreateJournalViewModel
<partial name="_SettingsImplementation" model="@Model.settings"></partial>

<form asp-action="Create" enctype="multipart/form-data" method="post" asp-controller="Journal">
    <div class="row">
    <div class="col-md-4">
            <img src="/ProfileImages/DefaultImage.jpg" style="max-height:20em;max-width:20em;"></img>
    </div>
    <div class="col-md-8">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="UserGuid" hidden value="@Model.UserGuid" class="form-label"></input>
        <input asp-for="ItemGuid" hidden value="@Model.ItemGuid" class="form-label"></input>
        <input asp-for="Title" style="width: -webkit-fill-available;" class="" >
    </div>
    </div>

    <div class="row">
        <div class="col-12">
            <label asp-for="Description" class="form-label">Description</label>
            <input asp-for="Description" style="width: -webkit-fill-available;"class="">

        </div>
   </div>    
   
   <div class="row">
        <div class="col-12">
            <div class="paper">
                <div class="paper-content">
            <label asp-for="Body" class="form-label">Body</label>
            <textarea style="height:20em;" asp-for="Body" id="BodyTextArea" class=""></textarea>

        </div>
   </div>       
   </div>
   </div>
   
   <div class="row">
        <div class="col-12 d-flex">
            <input asp-for="uploads" style="width:7em" class="form-control" />
            <button type="submit" title="Save" class="btn btn-success">Save</button>
            <button type="button" title="Cancel" class="btn btn-danger">Cancel</button>

        </div>

    </div>

</form>

