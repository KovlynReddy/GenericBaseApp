@model GenericAppDLL.Models.ViewModels.MenuItemViewModel

<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="~/Images/defaultImage.jpg" alt="Card image cap">
    <div class="card-body">
        <h3 class="card-title">@Model.ItemName</h3>
        <h5 class="card-title">@Model.Currency @Model.Cost</h5>
        <h6 class="card-title">@Model.SKUCode</h6>
        <p class="card-text">@Model.Caption</p>
        <button href="#" data-toggle="modal" data-target="#Modal" class="btn btn-primary AddItemToCart">Add</button>
    </div>
</div>

<div id="Modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Model.ItemName @Model.SKUCode</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
                <form asp-action="AddToCart" asp-controller="Menu">
            <div class="modal-body">
                <div class="row">             
                    <input asp-for="@Model.ModelGUID" value="@Model.ModelGUID" hidden class="form-control">
                        <input asp-for="@Model.Currency" value="@Model.Currency" hidden class="form-control">
                        <input asp-for="@Model.VendorGuid" value="@Model.VendorGuid" hidden class="form-control">
                        <input asp-for="@Model.Cost" value="@Model.Cost" hidden class="form-control">
                        <input asp-for="@Model.SKUCode" value="@Model.SKUCode" hidden class="form-control">
                        <input asp-for="@Model.ItemName" value="@Model.ItemName" hidden class="form-control">
                        <input asp-for="@Model.MenuId" value="@Model.MenuId" hidden class="form-control">
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label">Amount:</label>
                    <input asp-for="Amount" type="number" class="form-control">
                </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="CreateMeetUp" type="submit" class="btn btn-primary">Add To Cart</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
                </form>
        </div>
    </div>
</div>

 <script type="text/javascript">

    $(".AddItemToCart").click(function () {
        console.log("Add To Cart");
        $('#Modal').modal('show');
     });
     
 </script>