@model GenericAppDLL.Models.ViewModels.ManageVendorMenuViewModel
<partial name="_SettingsImplementation" model="@Model.settings"></partial>


@{
    var emojiTest = new List<string>() { "face-smile" };
}

<div class="row">
    <div class="col-3 d-none d-sm-block"></div>
    <div class="col-md-6 col-sm-12" style="text-align: -webkit-center;">

        <div class="card" style="width: -webkit-fill-available;">
            <img class="card-img-top" src="~/@Model.VendorDetails.VendorImage" alt="~/profileimage.png">
            <h5 class="card-title">@Model.VendorDetails.VendorName</h5>
            <p class="card-text">@Model.VendorDetails.VendorEmail  @Model.VendorDetails.ModelGUID</p>
            <a asp-action="SendDirectMessage" asp-controller="Chat" asp-route-itemid="@Model.VendorDetails.ModelGUID" class="btn btn-primary">Message</a>
            <a href="#" class="btn btn-secondary">Book</a>
            <a href="#" class="btn btn-success">Delete</a>
        </div>
    </div>

    <div class="col-3 d-none d-sm-block"></div>
</div>

<div class="row">
    <div class="col-3 d-none d-sm-block"></div>
    <div class="col-md-6 col-sm-12" style="text-align: -webkit-center;">
        <ul class="nav nav-tabs  justify-content-center">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" data-bs-target="#Menu" aria-current="page" href="#Posts">Menu</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" data-bs-target="#Bookings" href="#Bookings">Bookings</a>
            </li>            
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" data-bs-target="#Deals" href="#Deals">Deals</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" data-bs-target="#Reviews" href="#Reviews">Reviews</a>
            </li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" id="Menu" class="tab-pane fade in show active">
                <h3>Menu</h3>
                @foreach (var item in Model.menu)
                {
                    <div class="row">
                        <div class="col-md-3">
                        </div>
                        <div class="col-md-6">
                            <partial name="_VendorManageMenuItem" model="item"></partial>
                        </div>
                        <div class="col-md-3">
                        </div>
                    </div>
                }
            </div>
            <div role="tabpanel" id="Bookings" class="tab-pane fade">
                <h3>Bookings</h3>

            </div>
            <div role="tabpanel" id="Deals" class="tab-pane fade">
                <h3>Deals</h3>
            </div>            
            
            <div role="tabpanel" id="Reviews" class="tab-pane fade">
                <h3>Reviews</h3>
            </div>
        </div>

    </div>
    <div class="col-3 d-none d-sm-block"></div>
    <div />
</div>

