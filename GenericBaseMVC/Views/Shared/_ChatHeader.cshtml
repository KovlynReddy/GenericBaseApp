            @Model.LastMessage &emsp;&emsp;
                @Model.LastMessageSent
            </small>
</div>
</div>

<script type="text/javascript">
    $(".ChatHeader").click(function () {
        id = $(this).children('div').children('input').val()
        console.log("Enter Chat", id);
        window.location.href = "https://localhost:7140/Chat/SendDirectMessage?id=" + id;

    });
</script>