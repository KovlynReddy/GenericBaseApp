    <div class="position-relative avatar">
        <img class="img-fluid rounded-circle" src="@Model.ProfilePicturePath" alt="~/ProfileImage.png" />
        <span class="position-absolute bottom-0 start-100 translate-middle p-1 bg-success border border-light rounded-circle">
            <span class="visually-hidden">new alerts</span>
        </span>
    </div>
            <div class="d-inline-block chat-other-header-name" >
                @Model.RecieverName
            </div>
    </div>
<div class="d-flex align-items-baseline card-footer">
