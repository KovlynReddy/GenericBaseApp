@model GenericAppDLL.Models.ViewModels.PostViewModel


<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="~/@Model.AttatchmentPath" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.Caption</h5>
        <p class="card-text">@Model.Message </p>
        <a href="#" class="btn btn-primary"><i class="fa-regular fa-thumbs-up"></i>@*Interact*@</a>
        <a href="#" class="btn btn-secondary"><i class="fas fa-comment-dots"></i>@*Comment*@</a>
        <a href="#" class="btn btn-success"><i class="fas fa-retweet"></i>@*Share*@</a>
    </div>
</div>
