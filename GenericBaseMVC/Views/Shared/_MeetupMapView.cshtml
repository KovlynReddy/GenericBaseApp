@model GenericAppDLL.Models.ViewModels.CreateMeetupMapViewModel
<partial name="_SettingsImplementation" model="@Model.settings"></partial>


<div id="map" style="width:100%;height:400px;">m</div>

<div id="Craete" class="modal" tabindex="-1" role="dialog">
    <form asp-action="Post" asp-controller="Meetup">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Meetup</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="form-group">
                        <label for="newMeetup.Caption" class="col-form-label">Caption:</label>
                    <input asp-for="newMeetup.Caption" id="cap" type="text" class="form-control">
                </div>                
                <div class="form-group">
                        <label for="newMeetup.Lat" class="col-form-label">lat:</label>
                    <input asp-for="newMeetup.Lat" id="lat" type="text" class="form-control">
                </div>
                <div class="form-group">
                        <label for="newMeetup.lon" class="col-form-label">lon:</label>
                    <input asp-for="newMeetup.lon" id="lon" type="text" class="form-control">
                </div>



            </div>
            <div class="modal-footer">
                <button id="CreateMeetUp" type="submit" class="btn btn-primary">Create MeetUp</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
    </form>
</div>


<div id="Respond" class="modal" tabindex="-1" role="dialog">
    <form asp-action="Post" asp-controller="MeetupRequest">

        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Respond To Meetup Request</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Request Message:</label>
                        <input asp-for="newMeetup.Caption" id="cap" type="text" class="form-control">
                    </div>



                </div>
                <div class="modal-footer">
                    <a type="submit" id="RequestMeetup" href="" class="btn btn-primary"> Request </a>
                    @*<button type="submit" id="AcceptMeetup" href="" class="btn btn-primary"> Request </button>*@
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </form>
</div>


<script type="text/javascript">
    var lastClickedMarker ;
    var lastClickedPos;
    var LastClickedEH ; 
    // Locations: [title, lat, long, number]
    var locations = [
        ['Bar Termini', -29.776807, 30.924297, 1],
        ['French House', -29.786807, 30.934297, 2],
    ];

    @for (var i = 0; i < @Model.ids.Count; i++)
    {

        @:locations.push(["@Model.Captions[i]", @Model.Lats[i] , @Model.Longs[i] , "@Model.ids[i]"]);
            
    }

        var gmarkers = [];
    // Map Settings
    var map = new google.maps.Map(document.getElementById("map"), {
        zoom: 16,
        center: new google.maps.LatLng(-29.766807, 30.984297),
        mapTypeId: google.maps.MapTypeId.ROADMAP
    });

    map.addListener("click", (e) => {
    placeMarkerAndPanTo(e.latLng, map);

  });

    var infowindow = new google.maps.InfoWindow;

    var marker, i;
    for (i = 0; i < locations.length; i++) {
        marker = new google.maps.Marker({
            position: new google.maps.LatLng(locations[i][1], locations[i][2]),
            map: map,
            label: String(locations[i][0])
        });

        gmarkers.push(marker);
        google.maps.event.addListener(marker, 'click', (function (marker, i) {
            return function () {
                console.log("Listner 2", marker, i, gmarkers[i], locations[i]);
                infowindow.setContent(locations[i][0]);
                infowindow.open(map, marker);
                RespondToMeetup(locations[i][5]);
            }
        })(marker, i));
    }

    $('#list li').each(function (i, e) {
        $(e).click(function (i) {
            return function (e) {
                google.maps.event.trigger(gmarkers[i], 'click');
            }
        }(i));
    });

    function placeMarkerAndPanTo(latLng, map) {

        let answer = prompt("Create Meet-Up", "Yes or No");
        console.log(answer)
        if(answer){
            $('#Craete').modal('show');
        $('#lat').val(latLng);
        $('#lon').val(latLng);
        console.log(latLng);
        map.panTo(latLng);

            new google.maps.Marker({
                position: latLng,
                map: map,
            });
        }
    }

        $("#CreateMeetUp").click(function () {
            

            console.log("Create New Vendor/MeetUp");

        });

        function RespondToMeetup(id) {
        console.log("respond", id);
        $('#Respond').modal('show');
        var newUrl = "https://localhost:7140/MeetupRequest/";
        $('#RequestMeetup').attr('href', newUrl + "Post/" + id);
        //$('#AcceptMeetup').attr('href', newUrl + "Accept/" + id);
        //$('#DenyMeetup').attr('href', newUrl + "Deny/" + id);

        };

</script>

