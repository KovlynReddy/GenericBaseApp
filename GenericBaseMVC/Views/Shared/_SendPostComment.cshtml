@model GenericAppDLL.Models.ViewModels.PostInteractionViewModel

<form asp-controller="PostInteraction" asp-action="Comment" class="d-flex">
    <div class="col-md-11">
        <input asp-for="PostGuid" value="@Model.PostGuid" hidden />
        <input asp-for="SenderGuid" value="@Model.SenderGuid" hidden />
        <input asp-for="Body" style="width: -webkit-fill-available;height: -webkit-fill-available;" value="@Model.Body" />
    </div>
    <div class="col-md-1">
        <button type="submit" class="btn btn-light send-button-comment">
            <i class="fas fa-paper-plane"></i>
        </button>
    </div>
</form>