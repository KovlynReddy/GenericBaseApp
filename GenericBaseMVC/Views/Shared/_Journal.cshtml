@model GenericAppDLL.Models.ViewModels.JournalViewModel

@{
    var uniqueId = Guid.NewGuid().ToString();
}

@if (!Model.journalHeader.IsProfileView)
{
    <partial name="_PostHeader" model="@Model.journalHeader"></partial>
}
<div class="journal card card-body">
<div class="row">
    <div class="col-md-6">
        <img src="/@Model.uploadPathsList.FirstOrDefault()" style="max-height:20em;max-width:20em;"></img>
    </div>
    <div class="col-md-6 justify-content-end">
        <input asp-for="UserGuid" hidden value="@Model.UserGuid" class="form-label"></input>
        <input asp-for="ItemGuid" hidden value="@Model.ItemGuid" class="form-label"></input>
            <input asp-for="Title" value="@Model.Title" style="width:20em;text-align:end;margin-left: 2.5em !important;" class="underline-input">
        <partial name="_ImageCarousel" model="Model.uploadPathsList"></partial>
    </div>
</div>

<a asp-controller="Menu" asp-action="Details" asp-route-id="@Model.ItemGuid">
<div class="row">
    <div class="col-12">
                <input asp-for="Description" style="width:51em;" value="@Model.Description" class="underline-input">
                <div class="star-rating-check">
                    @if (Model.RatingEntry > 4)
                    {
                        <input type="radio" disabled checked="checked" id="5-stars" name="@uniqueId" value="5" />
                        <label class="star-rating-checked" style="color: #f90;" for="5-stars" class="star">&#9733;</label>
                    }
                    else
                    {
                        <input type="radio" disabled id="5-stars" name="@uniqueId" value="5" />
                        <label for="5-stars" class="star">&#9733;</label>
                    }

                    @if (Model.RatingEntry > 3)
                    {
                        <input type="radio" disabled checked="checked" id="4-stars" name="@uniqueId" value="4" />
                        <label class="star-rating-checked" style="color: #f90;" for="4-stars" class="star">&#9733;</label>
                    }
                    else
                    {
                        <input type="radio" disabled id="4-stars" name="@uniqueId" value="4" />
                        <label for="4-stars" class="star">&#9733;</label>
                    }

                    @if (Model.RatingEntry > 2)
                    {
                        <input type="radio" disabled checked="checked" id="3-stars" name="@uniqueId" value="3" />
                        <label class="star-rating-checked" style="color: #f90;" for="3-stars" class="star">&#9733;</label>
                    }
                    else
                    {
                        <input type="radio" disabled id="3-stars" name="@uniqueId" value="3" />
                        <label for="3-stars" class="star">&#9733;</label>
                    }

                    @if (Model.RatingEntry > 1)
                    {
                        <input type="radio" disabled checked="checked" id="2-stars" name="@uniqueId" value="2" />
                        <label class="star-rating-checked" style="color: #f90;" for="2-stars" class="star">&#9733;</label>
                    }
                    else
                    {
                        <input type="radio" disabled id="2-stars" name="@uniqueId" value="2" />
                        <label for="2-stars" class="star">&#9733;</label>
                    }

                    @if (Model.RatingEntry > 0)
                    {
                        <input type="radio" disabled checked="checked" id="1-star" name="@uniqueId" value="1" />
                        <label class="star-rating-checked" style="color: #f90;" for="1-star" class="star">&#9733;</label>
                    }
                    else
                    {
                        <input type="radio" disabled id="1-star" name="AverageRating" value="1" />
                        <label for="1-star" class="star">&#9733;</label>
                    }
                </div>

            </div>
</div>
</a>

