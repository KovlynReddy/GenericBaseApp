    <div class="col-md-4">
        <img src="/HOLPT1.jpg5ed12b0b-6a54-45f4-901d-7b72e45b8c94.jpg"></img>
    </div>
    <div class="col-md-8">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="UserGuid" hidden value="@Model.UserGuid" class="form-label"></input>
