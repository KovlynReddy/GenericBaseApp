<div class="row">
    <div class="col-12">
        <label asp-for="Description"  class="form-label">Description</label>
        <input asp-for="Description" value="@Model.Description" class="form-control">

    </div>
</div>

<div class="col-md-12">
    <partial name="_ImageCarousel" model="Model.uploadPathsList"></partial>
</div>

<div class="row">
    <div class="col-12">
        <label asp-for="Body" class="form-label">Body</label>
        <input style="height:20em;" value="@Model.Body" asp-for="Body" class="form-control">

    </div>
</div>

