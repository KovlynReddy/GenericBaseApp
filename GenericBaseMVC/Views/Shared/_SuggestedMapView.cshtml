@model GenericAppDLL.Models.ViewModels.MapViewModel
<partial name="_SettingsImplementation" model="@Model.settings"></partial>

<div id="map" style="width:100%;height:400px;">k</div>

<div id="Modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <label for="recipient-name" class="col-form-label">Recipient:</label>
                    <input id="lat" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label">Recipient:</label>
                    <input id="lon" type="text" class="form-control">
                </div>



            </div>
            <div class="modal-footer">
                <button id="CreateMeetUp" type="button" class="btn btn-primary">Create Booking</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@foreach (var meetup in Model.MapMarks)
{

    <div class="pe-2">
        <div class="card card-text d-inline-block p-2 px-3 m-1">
            @Html.Raw(meetup.Caption)
        </div>
        <div class="small">
            @meetup.Lat ,&emsp; @meetup.Lat
        </div>
    </div>
}


<script type="text/javascript">

    console.log("My Coordinates ", @Model.CenterLat , @Model.CenterLon);

    // Locations: [title, lat, long, number]
    var locations = [
        ['Bar Termini', -29.776807, 30.924297, 1],
        ['French House', -29.786807, 30.934297, 2],
    ];

    @for (var i = 0; i < @Model.Lats.Count; i++)
    {
        @:locations.push(["@Model.Names[i]", @Model.Lats[i] , @Model.Longs[i] , "@Model.Captions[i]"]);            
    }

    var gmarkers = [];
    
    // Map Settings
    var map = new google.maps.Map(document.getElementById("map"), {
        zoom: 16,
        center: new google.maps.LatLng(@Model.CenterLat,@Model.CenterLon),
        mapTypeId: google.maps.MapTypeId.ROADMAP
    });

    map.addListener("click", (e) => {
    placeMarkerAndPanTo(e.latLng, map);
  });

    var infowindow = new google.maps.InfoWindow;

    var marker, i;
    for (i = 0; i < locations.length; i++) {
        marker = new google.maps.Marker({
            position: new google.maps.LatLng(locations[i][1], locations[i][2]),
            map: map,
            label: String(locations[i][3])
        });
        gmarkers.push(marker);
        google.maps.event.addListener(marker, 'click', (function (marker, i) {
            return function () {
                infowindow.setContent(locations[i][0]);
                infowindow.open(map, marker);
            }
        })(marker, i));
    }
    $('#list li').each(function (i, e) {
        $(e).click(function (i) {
            return function (e) {
                google.maps.event.trigger(gmarkers[i], 'click');
            }
        }(i));
    });

    function placeMarkerAndPanTo(latLng, map) {

        let answer = prompt("Create Meet-Up", "Yes or No");
        console.log(answer)
        if(answer){
        $('#Modal').modal('show');
        $('#lat').val(latLng);
        $('#lon').val(latLng);
        console.log(latLng);
        map.panTo(latLng);

            new google.maps.Marker({
                position: latLng,
                map: map,
            });
        }
    }

        $("#CreateMeetUp").click(function () {
            

            console.log("Create New Vendor/MeetUp");

        });

</script>

