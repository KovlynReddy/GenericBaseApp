@model GenericAppDLL.Models.ViewModels.PostFooterViewModel


<div class="row">
    <div class="col-md-4">
        <small href="#" class=""><i class="fa-regular fa-thumbs-up"></i>@Model.NumLikes</small>
    </div>
    <div class="col-md-4">
        @*<partial name="_ProfileCard" model="customer.profileDetails"></partial>*@
        <small href="#" class=""><i class="fas fa-comment-dots"></i>@Model.NumComments</small>
    </div>
    <div class="col-md-4">
        <small href="#" class=""><i class="fas fa-retweet"></i>0</small>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <a asp-action="Like" asp-controller="PostInteraction" asp-route-id="@Model.postInteraction.PostGuid" class="btn btn-primary"><i class="fa-regular fa-thumbs-up"></i>@*Interact*@</a>
    </div>
    <div class="col-md-4">
        @*<partial name="_ProfileCard" model="customer.profileDetails"></partial>*@
        <button type="button" class="btn btn-secondary"><i class="fas fa-comment-dots"></i>@*Comment*@</button>
    </div>
    <div class="col-md-4">
        <a href="#" class="btn btn-success"><i class="fas fa-retweet"></i>@*Share*@</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
    <p>@Model.LastComments</p>
    </div>
</div>
<div class="row">
    <partial name="_SendPostComment" model="@Model.postInteraction"></partial>
</div>

<script type="text/javascript">
    $(document).ready(function () {


    });
</script>




