@model GenericAppDLL.Models.ViewModels.CreateBookingViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>LogVisit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingDateTime" class="control-label"></label>
                <input asp-for="BookingDateTime" class="form-control" />
                <span asp-validation-for="BookingDateTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SelectedBarber" class="control-label"></label>
                <select class="custom-select mt-2"
                        asp-items="@(new SelectList(Model.Barbers))">
                    <option disable hidden>Any</option>
                </select>

                <span asp-validation-for="SelectedBarber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Request" class="control-label"></label>
                <input asp-for="Request" class="form-control" />
                <span asp-validation-for="Request" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
